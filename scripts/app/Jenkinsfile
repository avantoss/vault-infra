library identifier: 'jenkins-global-lib'

kube().pod( "kubernetes", "kubernetes-vault-test" ).
    withServiceAccount( "jenkins" ).
node {
    stage('secret') {
        def secrets = [ 
            [ 
                path: 'secret/luggage',
                secretValues: [ 
                    [envVar: 'luggage', vaultKey: 'combination'] 
                ] 
            ]
        ]
        vault().withSecrets( secrets ) {
            sh 'echo $luggage'
        } 
    }
}
